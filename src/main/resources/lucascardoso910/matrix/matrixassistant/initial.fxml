<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="540.0" prefWidth="960.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lucascardoso910.matrix.matrixassistant.InitialController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Pane fx:id="initialPane" prefHeight="540.0" prefWidth="960.0">
         <children>
            <TextField fx:id="inputColumns" layoutX="460.0" layoutY="263.0" prefHeight="20.0" prefWidth="432.0" />
            <Label fx:id="welcomeText" layoutX="103.0" layoutY="38.0" prefHeight="50.0" prefWidth="710.0" text="Welcome to the Matrix Assistant!" textFill="RED">
               <font>
                  <Font size="42.0" />
               </font>
            </Label>
            <Label fx:id="instructionsColumns" alignment="CENTER" contentDisplay="CENTER" layoutX="29.0" layoutY="263.0" prefHeight="25.0" prefWidth="432.0" text="Insert how many columns your matrix has: " />
            <TextField fx:id="inputRows" layoutX="460.0" layoutY="200.0" prefHeight="25.0" prefWidth="432.0" />
            <Label fx:id="instructionsRows" alignment="CENTER" layoutX="14.0" layoutY="200.0" prefHeight="25.0" prefWidth="444.0" text="Insert how many rows your matrix has:" />
            <Button fx:id="readyBtn" layoutX="393.0" layoutY="383.0" mnemonicParsing="false" onAction="#switchToInput" prefHeight="57.0" prefWidth="136.0" text="Ready!" />
         </children>
      </Pane>
   </children>
</VBox>
